@model GroceryItem

<h2>Delete Grocery Item</h2>

<div>
    <h4>Are you sure you want to delete this item?</h4>
    <h3>@Model.Name</h3>
    <p>@Model.Description</p>
    <p>Price: $@Model.Price.ToString("F2")</p>
    <img src="@Url.Content(Model.ImageUrl)" alt="Grocery Item Image" class="img-thumbnail" width="200">

    <form method="post" action="@Url.Action("DeleteConfirmed", "GroceryItems", new { id = Model.Id })" class="mt-3">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index", "GroceryItems")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
