@model IEnumerable<GroceryItem>

<h2>Grocery Items</h2>

<a asp-action="Create" class="btn btn-primary mb-2">Create New</a>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Image</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
      <tr>
        <td>@item.Name</td>
        <td>@item.Description</td>
        <td>@item.Price.ToString("F2")</td>
        <td>
          @if (!string.IsNullOrEmpty(item.ImageUrl))
          {
            <img
              src="@item.ImageUrl"
              alt="Product Image"
              style="max-width: 100px"
            />
          }
        </td>
        <td>
          <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info"
            >Edit</a
          >
          |
          <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"
            >Delete</a
          >
        </td>
      </tr>
    }
  </tbody>
</table>

