@model User

<h2>Delete User</h2>
<hr>

<p>Are you sure you want to delete the user with the username <strong>@Model.Username</strong>?</p>

<form asp-action="DeleteUserConfirmed" asp-route-id="@Model.Id" method="post">
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
